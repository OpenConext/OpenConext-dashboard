<configuration scan="true">
  <appender name="file" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>${CATALINA_BASE}/logs/dashboard.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <!-- daily rollover -->
      <fileNamePattern>${CATALINA_BASE}/logs/dashboard-%d{yyyy-MM-dd}.log.gz</fileNamePattern>
        <maxHistory>60</maxHistory>
    </rollingPolicy>
    <encoder>
      <pattern>%d{ISO8601} %5p [%t] %logger{40}:%L - %m%n</pattern>
    </encoder>
  </appender>

  <logger name="org.springframework" level="warn" additivity="false">
    <appender-ref ref="file" />
  </logger>
  <logger name="nl.surfnet" level="debug" additivity="false">
    <appender-ref ref="file" />
  </logger>
  <root level="info">
    <appender-ref ref="file"/>
  </root>
</configuration>