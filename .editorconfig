# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

[*.java]
indent_style = space
indent_size = 2

[*.html]
indent_style = space
indent_size = 2

[*.js]
indent_style = space
indent_size = 2

[*.jsx]
indent_style = space
indent_size = 2

[*.css]
indent_style = space
indent_size = 2

[*.sass]
indent_style = space
indent_size = 2

[*.xml]
indent_style = space
indent_size = 2

[*.jsp]
indent_style = space
indent_size = 2
