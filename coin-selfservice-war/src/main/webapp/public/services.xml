<Module>
  <ModulePrefs
      title="Services Overview"
      description="Shows available services"
      scrolling="true"
      height="500"
      width="250">
    <Require feature="osapi" />
  </ModulePrefs>
  <Content type="html" view="default"><![CDATA[
  <link rel="stylesheet" href="https://showroom.test.showroom.surfconext.nl/css/bootstrap-2.0.4.css"/>
  <link rel="stylesheet" href="https://showroom.test.showroom.surfconext.nl/public/css/services.css"/>
  <div class="tabbable">
    <ul class="nav nav-tabs">
      <li id="public-tab"><a href="#public"
        data-toggle="tab">Public Services</a></li>
      <li id="idp-tab"><a href="#idp" data-toggle="tab">Institution
          Services</a></li>
      <li id="personal-tab"><a href="#personal" data-toggle="tab">Personal
          Services</a></li>
    </ul>
    <div class="tab-content">
      <div class="tab-pane" id="public">
        <section id="public" class="services-list"></section>
      </div>
      <div class="tab-pane" id="idp">
        <section id="idp" class="services-list"></section>
      </div>
      <div class="tab-pane" id="personal">
        <section id="personal" class="services-list"></section>
      </div>
    </div>
  </div>
<script type="text/javascript" src="https://showroom.test.showroom.surfconext.nl/js/jquery/jquery-1.8.3.min.js"></script>
<script type="text/javascript" src="https://showroom.test.showroom.surfconext.nl/js/bootstrap/bootstrap-2.0.3.min.js"></script>
<script type="text/javascript" src="https://showroom.test.showroom.surfconext.nl/public/js/oauth.js"></script>
<script type="text/javascript" src="https://showroom.test.showroom.surfconext.nl/public/js/services.js"></script>
]]></Content>
</Module>
